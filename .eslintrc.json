{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            {"avoidEscape": true}
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    },
    "globals": {
        "process": false,
        "__dirname": false,
        "describe": false,
        "it": false,
        "beforeEach": false,
        "afterEach": false,
        "app": true,
        "$": false,
        "AmCharts": false,
        "ace": false,
        "otplib": false,
        "swal": false,
        "angular": false,
        "centsa": true,
        "$http": false,
        "Papa": false,
        "importScripts": false
    }
}
