{
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": [
    "test/*",
    "dist/*"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}